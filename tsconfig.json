{
  "compilerOptions": {
    "target": "ES2017",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "incremental": true,
    "outDir": "dist",
    "sourceMap": true,
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
